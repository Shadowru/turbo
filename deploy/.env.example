PROJECT_NAME=turbo-bft
ENVIRONMENT=prod

# Traefik / домены
BASE_DOMAIN=example.com
TRAEFIK_DEFAULT_CERTRESOLVER=letsencrypt
TRAEFIK_ENTRYPOINT_WEB=web
TRAEFIK_ENTRYPOINT_WEBSECURE=websecure

# Поддомены
FRONTEND_DOMAIN=app.${BASE_DOMAIN}
BACKEND_DOMAIN=api.${BASE_DOMAIN}

# Let’s Encrypt email (если используете автоматический TLS)
TRAEFIK_LETSENCRYPT_EMAIL=admin@example.com

# Backend settings (FastAPI)
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=2
BACKEND_CORS_ORIGINS=https://${FRONTEND_DOMAIN}

# DB
POSTGRES_DB=turbo
POSTGRES_USER=turbo
POSTGRES_PASSWORD=turbo_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# RAG / storage (пример)
VECTOR_STORE_PATH=/data/vectorstore